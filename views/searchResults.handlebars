{{!-- Search Results Page --}}
{{!-- Start Jumbotron --}}
<div class="jumbotron">
    <div>
        <form class="lead" action="/profile" method="GET">
            <button class="profile-btn" type="text" id="profile" name="profile">Back to Profile</button>
        </form>

        <form class="lead" action="/questions" method="GET">
            <button class="post-btn">Post Questions</button>
        </form>
    </div>
    <div class="container">
        <img src="/assets/Images/Logos/linkedin_profile_image.png" alt="Logo image">
    </div>
</div>
{{!-- End Jumbotron --}}

{{!-- Start container with searched question's cards --}}
<div class="container">
    <div class="Question">
        <div class="row">
            <div class="card">
                <div class="card-header">
                    Submitted Questions
                </div>
                <div class="card-body">
                    {{#each Question}}
                    <li class="card-title">{{ this.dataValues.topic }}</h5>
                        <p class="card-body">Question: {{ this.dataValues.body }}</p>
                        <p class="card-body">Answer: {{ this.dataValues.answer }}</p>
                    </li>
                    <div id="space">
                        <hr>
                    </div>
                    {{else}}
                    <p>No questions with this topic</p>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- End Container --}}

