{{!-- Profile Page --}}
<div class="jumbotron">
    <div>
        <form class="lead" action="/" method="GET">
            <button class="logout-btn" type="text" id="logout" name="logout">Logout</button>
        </form>

        <form class="lead" action="/api/questions" method="GET">
            <button class="post-btn">Post Questions</button>
        </form>
    </div>
    <div class="container">
        <img src="/assets/Images/Logos/linkedin_profile_image.png" alt="Logo image">
        {{!-- <h1 class="display-4" id="site-title">Git.Interview</h1> --}}
    </div>

    {{!-- Topic selection buttons --}}
    <div class="container">
        <div class="btn-group btn-group-toggle align-self-end" data-toggle="buttons">
            <h3>Select a topic</h3>
            <label class="btn btn-secondary active">
                <input type="radio" name="options" id="option" autocomplete="off" checked> JavaScript/ jQuery
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option" autocomplete="off"> HTML
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option" autocomplete="off"> CSS
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option" autocomplete="off"> Node
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option" autocomplete="off"> MySql
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option" autocomplete="off"> Sequelize
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option" autocomplete="off"> RESTful Services
            </label>
        </div>
    </div>
</div>
</div>

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header">
                Top JavaScript Question
            </div>
            <div class="card-body">
                {{#each questions}}
                <li class="card-title">{{ topic }} </h5>
                    <p class="card-body"> {{ body }}</p>
                    <form action="/api/questions" method="POST">
                        <button class="fa fa-thumbs-up"></button>
                        <button class="fa fa-thumbs-down"></button>
                    </form>
                </li>
                {{/each}}
            </div>
        </div>
    </div>
</div>


