{{!-- Profile Page --}}
<div class="jumbotron">

    <form class="form-inline" action="/" method="GET">
        <button type="text" id="logout" name="logout">Logout</button>
    </form>

    <form class="lead" action="/api/questions" method="GET">
        <button class="btn btn-primary btn-lg">Post Questions</button>
    </form>

</div>

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-header">
                Top JavaScript Question
            </div>
            <div class="card-body">
                {{#each questions}}
                <li class="card-title">{{topic}} {{body}}</h5>
                    <form action="/api/questions" method="POST">
                        <button class="fa fa-thumbs-up"></button>
                        <button class="fa fa-thumbs-down"></button>
                    </form>
                </li>
                {{/each}}
            </div>
        </div>
    </div>
</div>